---
import Button from '@components/common/Button.astro';
import moment from "moment";
import { useTranslations, isChinese } from "@i18n/util";
const t = useTranslations(Astro);
const ifzh = isChinese(Astro);
export type Props = {
  source: string;
  post: {
    slug: string;
    body: string;
    collection: string;
    excerpt?: string;
    data: {
      title: string;
      description: string;
      date: string;
      keywords?: any[];
    };
  };
  posterWidth?: string;
  type?: string;
  index?: number;
  useAnchor?: boolean;
  class?: string;
};

const { post, source, posterWidth, type = "blog",index = 0, class: className = "", useAnchor=false, } = Astro.props;
---
<a
  href={`${ifzh ? '' : '/en'}/blog/${post.slug}/?source=${source}`}
  class="card h-[250px] p-[24px] bg-gray-01 shadow-none w-full flex flex-column items-start justify-between"
>
  {useAnchor?<p id={post.slug} class={"absolute z-[-100] top-[-4rem]"}></p>:null}
  <p class="flex-1 text-gray-07 text-xs font-normal">
    {moment(post.data.date).format("MMMM D, YYYY")}
  </p>
  <h2 class="flex-1 card-title text-gray-14 line-clamp-2 font-normal text-2xl truncate">
    {post.data.title}
  </h2>
  <div class="flex-[3_3_0%] w-full text-lg leading-8 overflow-hidden mt-[24px] simple-card-desc">
    {post.excerpt || post.data.description}
  </div>
</a>


<style>
  .card {
    transition:
      transform 0.2s,
      box-shadow 0.2s;
  }
  .card:hover {
    transition:
      transform 0.2s,
      box-shadow 0.2s;
    transform: translateY(-4px);
    box-shadow:
      4px 4px 8px rgba(0, 0, 0, 0.1),
      -4px -4px 8px rgba(0, 0, 0, 0.1);
  }
  a {
    text-decoration: none;
    color: inherit;
  }
  h2 {
    min-height: 3rem;
  }
  .simple-card-desc {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    color: #848487;
  }
</style>